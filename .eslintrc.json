{
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended"  // Add TypeScript recommendations
  ],
  "parser": "@typescript-eslint/parser",  // Use TypeScript parser
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint"  // Enable TypeScript plugin
  ],
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "never"],
    "@typescript-eslint/no-explicit-any": "off"
  },
  "ignorePatterns": ["*.test.*"]
}
